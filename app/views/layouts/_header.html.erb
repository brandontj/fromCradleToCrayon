<header class="navbar navbar-custom">
  <div class="container">
    <%= link_to "From Cradle to Crayon", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   '#' %></li>
        <% if user_signed_in? %>
          <li class="user">
            <%= current_user.email %>
          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          </li>
        <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
